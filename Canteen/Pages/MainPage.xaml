        <Button Content="Перейти" HorizontalAlignment="Left" Margin="12,274,0,0" VerticalAlignment="Top" Width="133" Height="22" FontSize="10" Click="Go_To_Direction"/>
        <TextBlock HorizontalAlignment="Left" Margin="12,252,0,0" TextWrapping="Wrap" Text="Список направлений" VerticalAlignment="Top"/>
        <Button Content="Перейти" HorizontalAlignment="Left" Margin="12,323,0,0" VerticalAlignment="Top" Width="133" Height="22" FontSize="10" Click="Add_Attestat"/>
